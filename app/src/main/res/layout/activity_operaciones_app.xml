<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OperacionesApp">

    <TextView
        android:id="@+id/textNum1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="60dp"
        android:text="Número 1"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textRdo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="140dp"
        android:text=" Resultado:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textNum2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="70dp"
        android:text="Número 2"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editNum1"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="90dp"
        android:ems="10"
        android:inputType="number"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editNum2"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="70dp"
        android:ems="10"
        android:inputType="number"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editRdo"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="335dp"
        android:layout_marginEnd="140dp"
        android:autofillHints=""
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="number"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/buttonSuma"
            android:layout_width="73dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:background="@drawable/iconosuma"
            android:backgroundTintMode="screen"
            android:baselineAligned="false"
            android:buttonTint="@android:color/transparent"
            android:textColorLink="@android:color/white" />

        <RadioButton
            android:id="@+id/buttonResta"
            android:layout_width="73dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/buttonSuma"
            android:background="@drawable/iconoresta"
            android:buttonTint="@android:color/transparent"
            android:textAlignment="textStart"
            android:textColorLink="@color/colorPrimaryDark"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/buttonMultip"
            android:layout_width="73dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/buttonResta"
            android:background="@drawable/iconomultip"
            android:buttonTint="@android:color/transparent" />

        <RadioButton
            android:id="@+id/buttonDivis"
            android:layout_width="73dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="3dp"
            android:layout_toEndOf="@+id/buttonMultip"
            android:background="@drawable/iconodiv"
            android:buttonTint="@android:color/transparent"
            android:textColorLink="@color/colorPrimary" />

    </RadioGroup>


    <Button
        android:id="@+id/buttonCalcular"
        android:layout_width="105dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/colorAccent"
        android:elevation="0dp"
        android:text="Calcular"
        android:textColor="@android:color/background_light"
        android:textSize="15sp" />

    <Button
        android:id="@+id/buttonLimpiar"
        android:layout_width="105dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Limpiar"
        android:textColor="@android:color/background_light"
        android:textColorLink="@color/colorPrimaryDark"
        android:textSize="15sp" />

</RelativeLayout>